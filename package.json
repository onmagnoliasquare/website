{
  "name": "website",
  "license": "AGPL-3.0-only",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "husky",
    "format": "yarn lint-staged",
    "build:front": "yarn workspace frontend build",
    "build:back": "yarn workspace cms build",
    "build": "yarn && yarn build:front && yarn build:cms",
    "check:front": "yarn workspace frontend check",
    "dev:front": "yarn workspace frontend dev",
    "dev:back": "yarn workspace cms dev",
    "preview:front": "yarn workspace frontend preview",
    "test:front": "yarn workspace frontend test:ci-no-pool && yarn workspace frontend test:integration",
    "test-ci:front": "yarn workspace frontend test:ci-no-pool && yarn workspace frontend test:integration",
    "test-ci:back": "yarn workspace cms test-ci:unit",
    "test-coverage": "yarn vitest run --coverage",
    "front:test:ui": "yarn workspace frontend test:ui",
    "sanity": "yarn workspace cms sanity",
    "lint:front": "yarn run -T eslint packages/frontend",
    "lint:cms": "yarn run -T eslint packages/cms"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "styled-components": "^6.1.19"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/compat": "1.4.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
    "@sanity/eslint-config-studio": "^5.0.2",
    "@types/eslint": "^9.6.1",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-svelte": "^3.12.4",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.2.3",
    "micromatch": "^4.0.8",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "svelte": "^5.39.8",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vitest": "^3.2.4",
    "wrangler": "^4.42.0"
  },
  "packageManager": "yarn@4.9.4",
  "engines": {
    "node": "24.8.0"
  }
}
